{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "noAssignInExpressions": {
          "level": "error",
          "options": {}
        },
        "noConstEnum": {
          "level": "error",
          "options": {}
        },
        "noPrecisionLoss": {
          "level": "error",
          "options": {}
        },
        "useAriaPropsForRole": {
          "level": "error",
          "options": {}
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 80
  },
  "files": {
    "maxSize": 262144
  }
}